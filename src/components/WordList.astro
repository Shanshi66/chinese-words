---
import ListCard from "./widget/ListCard.astro";
import { listDetails } from "@/customize/list";
---

<section>
    <div class="flex flex-col items-center py-16 px-5">
        <!-- Features Title -->
        <h2 class="text-2xl font-bold md:text-4xl text-center mb-10">
            Chinese Words List
        </h2>
        <!-- Features Grid -->
        <div class="grid gap-5 lg:grid-cols-3 md:grid-cols-1">
            {listDetails.map((word) => <ListCard detail={word} />)}
        </div>
    </div>
</section>
