---
import type { Explanation } from "@/common/types";
import PinyinWords from "./PinyinWords.astro";

interface Props {
    explanation: Explanation;
    index: number;
}

const { explanation, index } = Astro.props;
---

<div class="shadow-md rounded-md">
    <h3 class="md:md:text-xl bg-gray-100 rounded-t-md p-2 text-blue-700">
        #{index + 1} -
        {explanation.translate.english}
    </h3>
    <div class="p-2 md:md:text-xl">
        {
            explanation.examples.map((example) => (
                <div class="my-5 flex flex-col items-center">
                    <PinyinWords word={example.example} />
                    <p class="my-2 tracking-wide">
                        {example.translate.english}
                    </p>
                </div>
            ))
        }
    </div>
</div>
