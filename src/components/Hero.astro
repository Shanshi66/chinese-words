---
import type { Language } from "@/common/types";
import { getIntlData } from "@/customize/intl";

interface Props {
    lang: Language;
}

const { lang } = Astro.props;

const intlData = getIntlData(lang);
---

<!-- Hero Container -->
<div class="mx-auto px-5 py-16 md:px-10 md:py-24 lg:py-32">
    <h1 class="mb-10 text-3xl font-bold md:text-5xl text-center">
        {intlData.home.heroTitle}
    </h1>
    <p class="md:text-xl text-gray-500 text-center w-1/2 mx-auto">
        {intlData.home.heroSubtitle}
    </p>
</div>
